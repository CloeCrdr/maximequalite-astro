---
import '../styles/global.css';
const { lang, translations } = Astro.props;
---

<section class="about-section">

  <h2>{translations.entreprise.title}</h2>
  <div class="container">
    <div class="image-content">
      <img src="/images/renovation.jpg" alt="RÃ©novation">
    </div>
    <div class="text-content">
      <p>
        {translations.entreprise.description}
      </p>
    </div>
  </div>
</section>

<style>
  .about-section {
    background-color: #f3f3f3;
    padding: 50px 0;
  }

  .container {
    display: flex;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .image-content img {
    width: 350px;
    height: 200px;
    object-fit: cover;
    object-position: center 75%;
    border-radius: 10px;
  }

  .text-content {
    flex: 1;
    padding-left: 40px;
  }



  .text-content p {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
  }
</style>
