---
import '../styles/global.css';
const { lang, translations } = Astro.props;
---

<section class="about-section">
  <h2>{translations.entreprise.title}</h2>
  <div class="container">
    <div class="image-content">
      <img src="/images/renovation.jpg" alt="RÃ©novation">
    </div>
    <div class="text-content">
      <p>{translations.entreprise.description}</p>
    </div>
  </div>
</section>

<style>
/* ========= DESKTOP FIRST ========= */

.about-section {
  background-color: #f3f3f3;
  padding: 50px 0;
}

.about-section h2 {
  text-align: center;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  color: #222;
}

.container {
  display: flex;
  align-items: center;
  max-width: 1000px;
  margin: 0 auto;
  padding: 40px 20px;
}

/* image */
.image-content img {
  width: 350px;
  height: 200px;
  object-fit: cover;
  object-position: center 75%;
  border-radius: 10px;
}

/* texte */
.text-content {
  flex: 1;
  padding-left: 40px;
  text-align: left;
}

.text-content p {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #333;
}

/* ========= RESPONSIVE : COLONNE SOUS 768px ========= */
@media (max-width: 768px) {
  .container {
    flex-direction: column;
    padding: 20px;
  }

  .text-content {
    padding-left: 0;
    text-align: center;
    margin-top: 20px;
  }

  .image-content img {
    width: 350px;
    height: 200px;
  }
}
</style>
