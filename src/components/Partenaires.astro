---
const response = await fetch("https://script.google.com/macros/s/AKfycbzf1iRU68iNGEX1dokpCMuRu4vGmTVzfGaWbZ8bbWIYftesg_L80UFw2KuA6Yc98kDO/exec");
const partners = await response.json();
const partnersLoop = [...partners, ...partners];
const { lang, translations } = Astro.props;
---

<section class="partners-section">
  <h2>{translations.partenaires.title}</h2>
  <div class="container">
    <div class="partners-slider">
      <div class="partners-track">
        {partnersLoop.map((partner, index) => (
          <div class="partner-item" key={index}>
            <img src={partner["url du logo"]} alt={partner["nom du partenaire"]} />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>


<style>
  .partners-section {
    background-color: #f3f3f3;
    text-align: center;
    overflow: hidden;
  }

  .container {
    width: auto;
    margin: 0 auto;
    padding: 40px 20px;
  }

  h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 30px;
    text-align: left;
  }

  .partners-slider {
    display: flex;
    overflow: hidden;
    width: 100%;
    position: relative;
    padding: 40px 20px;
  }

  .partners-track {
    display: flex;
    width: max-content;
    animation: scrollLeft 50s linear infinite;
  }

  .partner-item {
    flex: 0 0 auto;
    /*width: 300px;*/
    margin: 0 10px;
  }

  .partner-item img {
    max-width: 300px;
    height: 150px;
    object-fit: cover;
    border-radius: 8px; 
  }

  @keyframes scrollLeft {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>
