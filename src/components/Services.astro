---
const { lang, translations } = Astro.props;
---

<section class="services-section">
  <div class="container">
    <h2>{translations.services.title}</h2>
    <div class="services-grid">
      {translations.services.list.map((service) => (
        <div class="service-item">{service.icon} | {service.name}</div>
      ))}
    </div>
  </div>
</section>

<style>
  .services-section {
    background-color: #e5e5e5;
    padding: 50px 0;
    text-align: center;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: left;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    padding: 40px 20px;
    gap: 20px;
    justify-content: center;
    text-align: center;
  }

  .service-item {
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
</style>
