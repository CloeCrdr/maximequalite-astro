---
const { lang, translations } = Astro.props;
---

<section class="services-section">
  <div class="container">
    <h2>{translations.services.title}</h2>
    <div class="services-grid">
      {translations.services.list.map((service) => (
        <div class="service-item">{service.icon} | {service.name}</div>
      ))}
    </div>
  </div>
</section>

<style>
/* ========= DESKTOP FIRST ========= */
.services-section {
  background-color: #e5e5e5;
  padding: 50px 0;
  text-align: center;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 40px 20px;
}

h2 {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 30px;
  text-align: left;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Desktop : 3 colonnes */
  gap: 30px;
  padding: 40px 0;
  text-align: center;
}

.service-item {
  font-size: 1.4rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 20px;
}

/* ========= RESPONSIVE (tablette & mobile) ========= */
@media (max-width: 1024px) {
  .services-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 colonnes sur tablette/mobile */
  }

  .service-item {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
  }
}

@media (max-width: 480px) {
  .services-grid {
    grid-template-columns: 1fr; /* 1 colonne sur petits mobiles */
  }

  .service-item {
    font-size: 1.2rem;
    padding: 15px;
    flex-direction: column;
    gap: 5px;
  }

  h2 {
    font-size: 2rem;
    text-align: center;
  }
}
</style>
